{
  "name": "bitcraft-city-manager",
  "version": "0.3.0",
  "description": "Dashboard for viewing Bitcraft claim inventory, citizens, and equipment",
  "private": true,
  "scripts": {
    "test": "vitest",
    "build": "npm run fix && tsc",
    "watch": "tsc --watch",
    "deploy": "npm run build && vercel --prod",
    "lint": "eslint src/ts",
    "lint:fix": "eslint src/ts --fix",
    "format": "prettier --write \"src/ts/**/*.ts\"",
    "format:check": "prettier --check \"src/ts/**/*.ts\"",
    "check": "npm run format:check && npm run lint",
    "fix": "npm run format && npm run lint:fix"
  },
  "devDependencies": {
    "@types/node": "^25.1.0",
    "typescript": "^5.4.0",
    "vitest": "^4.0.18",
    "eslint": "^9.0.0",
    "@eslint/js": "^9.0.0",
    "typescript-eslint": "^8.0.0",
    "eslint-config-prettier": "^10.0.0",
    "prettier": "^3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tohk3n/bitcraft-city-manager"
  },
  "keywords": [
    "bitcraft",
    "game",
    "dashboard",
    "inventory"
  ],
  "license": "MIT"
}
