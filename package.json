{
  "name": "bitcraft-city-manager",
  "version": "0.3.0",
  "description": "Dashboard for viewing Bitcraft claim inventory, citizens, and equipment",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "vitest",
    "build": "npm run check && npm run build:ts && npm run build:scss",
    "deploy": "npm run build && vercel --prod",
    "lint": "eslint src/ts",
    "lint:fix": "eslint src/ts --fix",
    "format": "prettier --write \"src/**/*.{ts,scss}\"",
    "format:check": "prettier --check \"src/**/*.{ts,scss}\"",
    "check": "npm run format:check && npm run lint",
    "fix": "npm run format && npm run lint:fix",
    "build:ts": "tsc",
    "build:scss": "sass src/scss:public/css --style=compressed --no-source-map",
    "watch:ts": "tsc --watch",
    "watch:scss": "sass --watch src/scss:public/css",
    "start": "vercel dev"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^25.1.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "prettier": "^3.0.0",
    "sass": "^1.97.3",
    "typescript": "^5.4.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^4.0.18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tohk3n/bitcraft-city-manager"
  },
  "keywords": [
    "bitcraft",
    "game",
    "dashboard",
    "inventory"
  ],
  "license": "MIT"
}
